@model Azure_Assignment.EF.Users
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Breadcrumb = "Register";
}

@Html.Partial("Breadcrumb")
@if (Session["CLIENT_SESSION"] == null)
{
    <section class="checkout spad">
        <div class="container">
            @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, htmlAttributes: new { @class = "checkout__form" }))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <h5>Billing detail</h5>
                        <h2 style="color:red">@TempData["ErrorMess"]</h2>
                        <div class="row">

                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>First Name <span>*</span></p>
                                    <input type="text" placeholder="Enter your firstname" name="firstname" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Last Name <span>*</span></p>
                                    <input type="text" placeholder="Enter your lastname" name="lastname" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Username <span>*</span></p>
                                    <input type="text" placeholder="Enter your username" name="username">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Address <span>*</span></p>
                                    <input type="text" placeholder="Street Address" name="address" >
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Phone <span>*</span></p>
                                    <input type="text" readonly />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Email <span>*</span></p>
                                    <input type="text" name="" >
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Note </p>
                                    <input type="text" placeholder="Your note" name="note" >
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="site-btn">Place order</button>
                        
                </div>
            }
        </div>
    </section>
}
else
{
    <section class="checkout spad">
        <div class="container">
            <div class="alert alert-success">You has logged in!</div>
        </div>
    </section>
}

@section ClientScript{
    <!--===============================================================================================-->
    <script src="~/Scripts/log-in-plugin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/log-in-plugin/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/log-in-plugin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Scripts/log-in-plugin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/log-in-plugin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/log-in-plugin/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Scripts/log-in-plugin/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/log-in-plugin/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/log-in-plugin/js/main.js"></script>
}
