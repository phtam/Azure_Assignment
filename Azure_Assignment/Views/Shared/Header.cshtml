@{ 
    var client = (Azure_Assignment.Models.UserLogin)Session["CLIENT_SESSION"];
}
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a href="~/Home"><img src="img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7">
                <nav class="header__menu">
                    <ul>
                        <li class="@ViewBag.Act_Home"><a href="~/Home">Home</a></li>
                        @{
                            foreach (var item in ViewBag.Layout_Menu)
                            {
                                <li class="@ViewBag.Act_"><a href="~/category-@item.CategoryID">@item.CategoryName</a></li>
                            }
                        }
                        <li class="@ViewBag.Act_Categories">
                            <a href="#">Categories</a>
                            <ul class="dropdown">
                                @{
                                    foreach (var item in ViewBag.Categories_List)
                                    {
                                        <li><a href="~/category-@item.CategoryID">@item.CategoryName</a></li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="@ViewBag.Act_Brands">
                            <a href="#">Brands</a>
                            <ul class="dropdown">
                                @{
                                    foreach (var item in ViewBag.Suppliers_List)
                                    {
                                        <li><a href="~/Categories/@item.SupplierID">@item.CompanyName</a></li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="@ViewBag.Act_Blogs"><a href="~/Home/Blogs">Blog</a></li>
                        <li class="@ViewBag.Act_Contact"><a href="~/Home/Contact">Contact</a></li>
                    </ul>

                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    <div class="header__right__auth">
                        @if (Session["CLIENT_SESSION"] == null)
                        {
                            <a href="~/login">Login</a>
                            <a href="~/register">Register</a>
                        }
                        else
                        {
                            <a href="~/profile">Hi, @client.FirtName @client.LastName</a>
                            <a href="~/logout">Logout</a>
                        }

                    </div>
                    <ul class="header__right__widget">
                        <li><span class="icon_search search-switch"></span></li>
                        <li>
                            @if (Session["CLIENT_SESSION"] != null)
                            {
                                if (client.Role == 0)
                                {
                                    <a href="~/admin">Admin</a>
                                }
                                else
                                {
                                    <a href="~/cart">
                                        <span class="icon_folder"></span>
                                        <div class="tip">@ViewBag.QuantityInCart</div>
                                    </a>
                                }
                            }

                        </li>
                        <li>
                            <a href="~/cart">
                                <span class="icon_bag_alt"></span>
                                <div class="tip">@ViewBag.QuantityInCart</div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
