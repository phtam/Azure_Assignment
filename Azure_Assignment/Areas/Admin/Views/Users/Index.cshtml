@model IEnumerable<Azure_Assignment.EF.Users>

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Manage Users</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/">Admin</a></li>
                        <li class="breadcrumb-item active">Users</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Data of Users</h3>
                    <p>
                        <a class="btn btn-success btn-sm float-right" href="~/Admin/Users/Create">
                            <i class="fas fa-plus">
                            </i>
                            Create New
                        </a>
                    </p>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tbl_Users" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirtName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Gender)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Birthday)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Phone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Picture)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Role)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirtName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @if(item.Gender == true)
                                        {
                                            <div>Male</div>
                                        }
                                        else
                                        {
                                            <div>Female</div>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Birthday)
                                    </td>
                                    <td>
                                        <a href="tel: @item.Phone">@Html.DisplayFor(modelItem => item.Phone)</a>
                                    </td>
                                    <td>
                                        <a href="mailto: @item.Email">@Html.DisplayFor(modelItem => item.Email)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @if (!item.Picture.IsEmpty())
                                        {
                                            <img src="@Url.Content(item.Picture)" width="200" height="100" />
                                        }
                                        else
                                        {
                                            <p>No Image</p>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Role == 0)
                                        {
                                            <div>Admin</div>
                                        }
                                        else if (item.Role == 1)
                                        {
                                            <div>Employee</div>
                                        }
                                        else if (item.Role == 2)
                                        {
                                            <div>Customer</div>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == true)
                                        {
                                            <div style="color:green">Active</div>
                                        }
                                        else
                                        {
                                            <div style="color:red">Disable</div>
                                        }
                                    </td>
                                    
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="~/Admin/Users/Details/@item.Username">
                                            <i class="fas fa-folder">
                                            </i>
                                            View
                                        </a>
                                        <a class="btn btn-info btn-sm" href="~/Admin/Users/Edit/@item.Username">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="~/Admin/Users/Delete/@item.Username">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>