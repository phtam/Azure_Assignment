@model Azure_Assignment.EF.Orders

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var orderDetailList = (List<Azure_Assignment.EF.OrderDetails>)ViewBag.OrderDetail;
}


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Order Detail</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Admin/">Admin</a></li>
                        <li class="breadcrumb-item active">Order Detail</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Order</h3>
                        </div>
                        <div class="card-body">
                            <table id="tbl_Orders" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OrderID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreationDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ShippedDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ShippedAddress)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Note)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Payments.PaymentName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Users.FirtName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Users.Phone)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @Model.OrderID
                                        </td>
                                        <td>
                                            @Model.CreationDate
                                        </td>
                                        <td>
                                            @Model.ShippedDate
                                        </td>
                                        <td>
                                            @Model.ShippedAddress
                                        </td>
                                        <td>
                                            @Model.Note
                                        </td>
                                        <td>
                                            @Model.Status
                                        </td>
                                        <td>
                                            @Model.Payments.PaymentName
                                        </td>
                                        <td>
                                            @Model.Users.FirtName
                                        </td>
                                        <td>
                                            @Model.Users.Phone
                                        </td>

                                    </tr>



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-lightblue">
                            <div class="card-header">
                                <h3 class="card-title">Data of Order Detail</h3>
                            </div>
                            <div class="card-body">
                                <table id="tbl_OrderDetail" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                Product Name
                                            </th>
                                            <th>
                                                Unit Price
                                            </th>
                                            <th>
                                                Quantity
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in orderDetailList)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Products.ProductName
                                                </td>
                                                <td>
                                                    @item.UnitPrice
                                                </td>
                                                <td>
                                                    @item.Quantity
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>
@section ScriptConfig
{
    <link href="~/Scripts/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/Scripts/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
        $("#tbl_Orders").DataTable({
            "responsive": true,
            "autoWidth": false,
            "aoColumns": [
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null,
                null
            ]
        });

        $("#tbl_OrderDetail").DataTable({
            "responsive": true,
            "autoWidth": false,
            "aoColumns": [
                null,
                null,
                null
            ]
        });


    </script>
}